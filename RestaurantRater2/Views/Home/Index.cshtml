@{
    ViewBag.Title = "Home Page";

    var dict = new Dictionary<int, string>();
    dict.Add(0, "What to expect");
    dict.Add(1, "Bad environment, bad food, unhelpful staff");
    dict.Add(2, "Sub-par setting, forgettable food, unfriendly staff");
    dict.Add(3, "Mediocre setting, mediocre food, okay staff");
    dict.Add(4, "Pleasent environment, memorible food, helpful staff");
    dict.Add(5, "Ambiance, food, staff - Excellent");
}

<div class="jumbotron text-center">
    <h1>Restaurant Rater</h1>
    <h2 class="lead">Web application for rating local resturants</h2>
    <img src="~/Assets/restaurantrating.png" class="text-center" />
    <div class="row">
        <div class="col">
            <br />
            @Html.ActionLink("Rate Restaurants", "../Restaurant/Index")
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Rate a Restaurant</h2>
        <p>Don't see a restaurant on our list? Add one yourself!</p>
        <p><a class="btn btn-primary" href="../Restaurant/Create">Create a New Rating</a></p>
    </div>
    <div class="col-md-4">
        <h2>See Rating</h2>
        <p>See what restaurants are already on our list!</p>
        <p><a class="btn btn-primary" href="../Restaurant/Index">Check Ratings</a></p>
    </div>
    <div class="col-md-4">
        <h2>Star Rating Meaning</h2>
        <p>What do the ratings mean?</p>

        <div id="carouselRestaurants" class="carousel slide text-center" data-ride="carousel">
            <div class="carousel-inner">
                <div class="item active">
                    <h3>Rating</h3>
                    <h5>@Html.DisplayFor(modelItem => dict[0])</h5>
                </div>

                @for (int i = 1; i <= 5; i++)
                {
                    <div class="item">
                        <h3>@i</h3>
                        <h5>@Html.DisplayFor(modelItem => dict[i])</h5>
                    </div>
                }
            </div>
            <a class="left carousel-control" href="#carouselRestaurants" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#carouselRestaurants" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>